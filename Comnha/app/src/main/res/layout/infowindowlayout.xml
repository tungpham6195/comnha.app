<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#ECEFF1"

    android:layout_width="wrap_content">

    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#ECEFF1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:background="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Tên quán"
                    android:id="@+id/txt_TenQuan"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoảng cách"
                android:id="@+id/txt_KhoangCach"
                android:textColor="?attr/actionMenuTextColor"
                    android:textSize="10sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ"
                android:id="@+id/txt_DiaChi"
                android:padding="2dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:textColor="?attr/actionMenuTextColor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ mở"
                android:padding="2dp"
                android:textColor="?attr/actionMenuTextColor"
                android:id="@+id/txt_GioMo"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_below="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ECEFF1">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/background_style"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/txt_DiemGia"
                android:textColor="@color/colorgia"
                android:textStyle="bold"
                android:textSize="35sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/txt_Gia" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/background_style"

            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/txt_DiemPhucVu"
                android:textColor="@color/colorphucvu"
                android:textStyle="bold"
                android:textSize="35sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phục Vụ"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/textView2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/background_style"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/txt_DiemVeSinh"
                android:textColor="@color/colorvesinh"
                android:textStyle="bold"
                android:textSize="35sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vệ Sinh"
                android:textSize="13sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>