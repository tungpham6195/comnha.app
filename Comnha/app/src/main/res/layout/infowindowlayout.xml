<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/cardv_info_width"
            android:layout_height="@dimen/cardv_info_height"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/cardv_cornerRadius_infowindow"
            card_view:cardElevation="@dimen/cardv_elevation_infowindow">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txt_GiaTien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/text_rategia"
                    android:textSize="@dimen/text_rate_txt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_DiemGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="@color/colorgia"
                    android:textSize="@dimen/text_rate_mark"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/cardv_info_width"
            android:layout_height="@dimen/cardv_info_height"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/cardv_cornerRadius_infowindow"
            card_view:cardElevation="@dimen/cardv_elevation_infowindow">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/text_PhucVu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/text_ratepv"
                    android:textSize="@dimen/text_rate_txt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_DiemPhucVu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="8"
                    android:textColor="@color/colorphucvu"
                    android:textSize="@dimen/text_rate_mark"
                    android:textStyle="bold" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/cardv_info_width"
            android:layout_height="@dimen/cardv_info_height"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/cardv_cornerRadius_infowindow"
            card_view:cardElevation="@dimen/cardv_elevation_infowindow">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_VeSinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/text_ratevs"
                    android:textSize="@dimen/text_rate_txt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_DiemVeSinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="8"
                    android:textColor="@color/colorvesinh"
                    android:textSize="@dimen/text_rate_mark"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_TenQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên quán"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_DiaChi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_GioMo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ mở"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>