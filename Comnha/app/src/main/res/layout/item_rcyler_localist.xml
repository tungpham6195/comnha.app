<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="75dp"
    android:layout_marginBottom="2.5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="2.5dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardElevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/item_rcyler_imgV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/item_rcyler_txtTenquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/item_rcyler_imgV"
                android:maxLength="50"
                android:text="Cơm ngô quyền 2"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_rcyler_txtdiachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_rcyler_txtTenquan"
                android:layout_toEndOf="@+id/item_rcyler_imgV"
                android:maxLength="40"
                android:text="89 ngô quyên, thủ đức, hồ chí minh"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/item_rcyler_txtTenquan"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_rcyler_txtkm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 km"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_rcyler_txtscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>